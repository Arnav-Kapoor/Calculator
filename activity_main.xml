<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F3"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:backgroundTint="#009688"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/purple_700"
        android:textSize="56dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btAC"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#FFEB3B"
                android:onClick="clearInput"
                android:text="AC"
                android:textColor="#FF5722"

                android:textSize="30sp"
                app:iconTint="#673AB7" />

            <Button
                android:id="@+id/btSqrt"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#FFEB3B"
                android:onClick="getOpp"
                android:text="sqrt"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btPercent"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#FFEB3B"
                android:onClick="getOpp"
                android:text="%"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btDivide"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getOpp"
                android:text="/"
                android:textColor="#FF5722"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt7"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="7"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="8"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="9"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btAdd"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getOpp"
                android:text="+"
                android:textColor="#FF5722"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="4"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="5"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="6"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btSub"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getOpp"
                android:text="-"
                android:textColor="#FF5722"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="1"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="2"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getNumbers"
                android:text="3"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btMul"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:backgroundTint="#FFEB3B"
                android:onClick="getOpp"
                android:text="x"
                android:textColor="#FF5722"
                android:textSize="30sp" />

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:onClick="getNumbers"
            android:text="0"
            android:textColor="#FF5722"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btDot"
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:onClick="getNumbers"
            android:text="."
            android:textColor="#FF5722"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btResult"
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:onClick="getResult"
            android:text="="
            android:textColor="#FF5722"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>
